{
  "name": "@rykan/login",
  "version": "1.0.0",
  "description": "Contains login logic for rykan, such as issuing JWTs and checking passwords",
  "main": "lib/index.js",
  "repository": "https://gitlab.com/rykan/authentication",
  "author": "Rykan",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node ./lib/index.js",
    "nodemon": "cross-env DEBUG=rykan:* nodemon --inspect ./lib/index.js",
    "test": "cross-env TS_NODE_FILES=true RYKAN_LOG_SILENT=true mocha -r ts-node/register test/**/*.ts",
    "coverage": "cross-env TS_NODE_FILES=true nyc mocha -r ts-node/register test/**/*.ts"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov",
      "json"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "ajv": "^6.10.2",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "cookie-parser": "^1.4.4",
    "csrf": "^3.1.0",
    "express": "^4.17.1",
    "fast-safe-stringify": "^2.0.6",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "^7.11.0",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/chai-json-schema": "^1.4.4",
    "@types/cookie": "^0.3.3",
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "^4.1.4",
    "@types/express": "^4.17.0",
    "@types/helmet": "^0.0.43",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/morgan": "^1.7.35",
    "@types/pg": "^7.4.14",
    "@types/uuid": "^3.4.5",
    "chai-json-schema": "^1.5.1",
    "codecov": "^3.5.0",
    "cookie": "^0.4.0",
    "cross-env": "^5.2.0",
    "nodemon": "^1.19.1"
  }
}
